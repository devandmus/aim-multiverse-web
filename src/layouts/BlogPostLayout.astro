---
import BaseLayout from "./BaseLayout.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { format } from "date-fns";
import { es } from "date-fns/locale";
import RelatedArticles from "../components/RelatedArticles.astro";
import { ResourceDownload } from "../components/markdown";
import Tags from "../components/Tags.astro";
import NeonBox from "../components/atoms/NeonBox.astro";

export interface Props {
    frontmatter: CollectionEntry<"blog">["data"];
    url: string;
    currentPost?: CollectionEntry<"blog">;
}

const { frontmatter, url, currentPost } = Astro.props;
const slug = currentPost?.slug;

// Obtener todos los posts para artículos relacionados
const allPosts = await getCollection("blog");

// Generar JSON-LD para SEO
const jsonLd = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    headline: frontmatter.title,
    description: frontmatter.description,
    author: {
        "@type": "Person",
        name: frontmatter.author,
    },
    datePublished: frontmatter.date.toISOString(),
    dateModified:
        frontmatter.updatedDate?.toISOString() ||
        frontmatter.date.toISOString(),
    url: url,
    keywords: frontmatter.tags?.join(", "),
    articleSection: frontmatter.category,
    wordCount: frontmatter.readingTime,
};
---

<BaseLayout
    title={frontmatter.seo?.title || frontmatter.title}
    description={frontmatter.seo?.description || frontmatter.description}
>
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

    <article
        class="min-h-screen bg-base-dark text-base-light"
        style={`view-transition-name: article-card-${slug}`}
    >
        <!-- Hero Section -->
        <section class="relative py-20 px-4">
            <div class="max-w-6xl mx-auto">
                <NeonBox class="p-12">
                    <div class="mb-8">
                        <Tags
                            tags={frontmatter.tags || []}
                            category={frontmatter.category || ""}
                            size="large"
                            style={`view-transition-name: article-tags-${slug}`}
                        />
                    </div>

                    <h1
                        class="text-4xl md:text-6xl font-bold mb-6 leading-tight"
                        style={`view-transition-name: article-title-${slug}`}
                    >
                        {frontmatter.title}
                    </h1>

                    <p class="text-xl text-base-grey mb-8">
                        {frontmatter.description}
                    </p>

                    <div
                        class="flex flex-wrap items-center gap-4 text-base-grey"
                    >
                        <div class="flex items-center gap-2">
                            <svg
                                class="w-5 h-5"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                                    clip-rule="evenodd"></path>
                            </svg>
                            <span>{frontmatter.author}</span>
                        </div>

                        <div class="flex items-center gap-2">
                            <svg
                                class="w-5 h-5"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                                    clip-rule="evenodd"></path>
                            </svg>
                            <span
                                >{
                                    format(frontmatter.date, "dd MMMM yyyy", {
                                        locale: es,
                                    })
                                }</span
                            >
                        </div>

                        {
                            frontmatter.readingTime && (
                                <div class="flex items-center gap-2">
                                    <svg
                                        class="w-5 h-5"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                                            clip-rule="evenodd"
                                        />
                                    </svg>
                                    <span>{frontmatter.readingTime}</span>
                                </div>
                            )
                        }
                    </div>
                </NeonBox>
            </div>

            <!-- Content -->
            <div class="prose prose-lg prose-invert max-w-none">
                <slot />
            </div>

            <!-- Recursos del artículo -->
            {
                frontmatter.resources && (
                    <div class="mt-12">
                        <ResourceDownload
                            resources={frontmatter.resources}
                            articleSlug={currentPost?.id || ""}
                        />
                    </div>
                )
            }
        </section>
    </article>
</BaseLayout>

<!-- Related Articles -->
{
    currentPost && (
        <section class="px-4 pb-20">
            <div class="max-w-6xl mx-auto">
                <RelatedArticles
                    currentPost={currentPost}
                    allPosts={allPosts}
                    type="related"
                    maxResults={3}
                />
            </div>
        </section>
    )
}

<style>
    /* Estilos para el contenido markdown */
    .prose {
        --tw-prose-body: var(--base-light);
        --tw-prose-headings: var(--base-light);
        --tw-prose-lead: var(--base-grey);
        --tw-prose-links: var(--neon-cyan);
        --tw-prose-bold: var(--base-light);
        --tw-prose-counters: var(--base-grey);
        --tw-prose-bullets: var(--neon-cyan);
        --tw-prose-hr: var(--neon-cyan);
        --tw-prose-quotes: var(--base-light);
        --tw-prose-quote-borders: var(--neon-cyan);
        --tw-prose-captions: var(--base-grey);
        --tw-prose-code: var(--neon-pink);
        --tw-prose-pre-code: var(--base-light);
        --tw-prose-pre-bg: var(--base-dark);
        --tw-prose-th-borders: var(--neon-cyan);
        --tw-prose-td-borders: var(--base-grey);
    }

    .prose h1,
    .prose h2,
    .prose h3,
    .prose h4,
    .prose h5,
    .prose h6 {
        color: var(--base-light);
        font-weight: 700;
    }

    .prose h2 {
        border-bottom: 2px solid var(--neon-cyan);
        padding-bottom: 0.5rem;
    }

    .prose code {
        background-color: var(--base-dark);
        padding: 0.25rem 0.5rem;
        border-radius: 0.375rem;
        font-size: 0.875em;
    }

    .prose pre {
        background-color: var(--base-dark);
        border: 1px solid var(--neon-cyan);
        border-radius: 0.5rem;
    }

    .prose blockquote {
        border-left: 4px solid var(--neon-cyan);
        background-color: var(--base-dark);
        padding: 1rem;
        border-radius: 0.5rem;
    }

    .prose a {
        color: var(--neon-cyan);
        text-decoration: none;
        border-bottom: 1px solid transparent;
        transition: border-color 0.3s ease;
    }

    .prose a:hover {
        border-bottom-color: var(--neon-cyan);
    }
</style>
