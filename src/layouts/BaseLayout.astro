---
import "../styles/global.css";
import RetroFuturisticMenu from "../components/RetroFuturisticMenu.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
  description?: string;
  posts?: any[];
}

const {
  title,
  description = "Andrés Ignacio Maldonado - Tech Lead • AI • Música",
  posts = [],
} = Astro.props;

// Construir URL completa dinámicamente usando Astro.url
const baseUrl = "https://andres-maldonado.com";
const fullUrl = `${baseUrl}${Astro.url.pathname}`;

// Generar prefetch links para los posts
const prefetchLinks = posts.map((post) => ({
  href: `/blog/${post.slug}`,
}));
---

<!doctype html>
<html lang="es" class="h-full">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-DVKQKRWPDC"
    ></script>
    <script>
      // @ts-ignore
      window.dataLayer = window.dataLayer || [];
      // @ts-ignore
      function gtag() {
        // @ts-ignore
        dataLayer.push(arguments);
      }
      // @ts-ignore
      gtag("js", new Date());

      // @ts-ignore
      gtag("config", "G-DVKQKRWPDC");
    </script>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg" />
    <link rel="shortcut icon" type="image/svg+xml" href="/images/favicon.svg" />
    <link rel="apple-touch-icon" href="/images/favicon.svg" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={fullUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content="https://andres-maldonado.com/images/andres-profesional-og.jpg"
    />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta
      property="og:image:alt"
      content="Andrés Ignacio Maldonado - Tech Lead • AI • Música"
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={fullUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta
      property="twitter:image"
      content="https://andres-maldonado.com/images/andres-profesional-og.jpg"
    />
    <meta
      property="twitter:image:alt"
      content="Andrés Ignacio Maldonado - Tech Lead • AI • Música"
    />

    <!-- Additional SEO -->
    <meta name="author" content="Andrés Ignacio Maldonado" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#0D0D0F" />

    <slot name="head" />
    <title>{title}</title>
    {prefetchLinks.map((link) => <link rel="prefetch" href={link.href} />)}
  </head>
  <body class="min-h-full bg-black text-white font-sans">
    <RetroFuturisticMenu />
    <slot />
    <!-- Suscripción -->

    <Footer />

    <!-- Script inline para mostrar backArrow inmediatamente cuando hay historial -->
    <script>
      // Detectar historial inmediatamente para evitar parpadeo
      (function () {
        const isHomePage =
          window.location.pathname === "/" ||
          window.location.pathname === "/index.html" ||
          window.location.pathname === "";

        if (!isHomePage) {
          const hasValidReferrer =
            document.referrer &&
            document.referrer !== window.location.href &&
            document.referrer !== window.location.origin + "/" &&
            document.referrer !== window.location.origin;

          const hasHistory = window.history.length > 1;

          if (hasValidReferrer || hasHistory) {
            // Aplicar estilos inmediatamente para mostrar la flecha sin fade in
            const style = document.createElement("style");
            style.setAttribute("data-back-arrow-inline", "true");
            style.textContent = `
              #back-arrow {
                opacity: 1 !important;
                transform: translateX(0) !important;
                visibility: visible !important;
                pointer-events: auto !important;
                transition: none !important;
              }
            `;
            document.head.appendChild(style);
          }
        }
      })();
    </script>
  </body>
</html>
