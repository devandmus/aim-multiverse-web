---
import "../styles/global.css";
import RetroFuturisticMenu from "../components/RetroFuturisticMenu.astro";
import Footer from "../components/Footer.astro";
import SubscriptionBox from "../components/SubscriptionBox.astro";

export interface Props {
  title: string;
  description?: string;
  posts?: any[];
}

const {
  title,
  description = "Andrés Ignacio Maldonado - Tech Lead • AI • Música",
  posts = [],
} = Astro.props;

// Generar prefetch links para los posts
const prefetchLinks = posts.map((post) => ({
  href: `/blog/${post.slug}`,
}));
---

<!doctype html>
<html lang="es" class="h-full">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-DVKQKRWPDC"
    ></script>
    <script>
      // @ts-ignore
      window.dataLayer = window.dataLayer || [];
      // @ts-ignore
      function gtag() {
        // @ts-ignore
        dataLayer.push(arguments);
      }
      // @ts-ignore
      gtag("js", new Date());

      // @ts-ignore
      gtag("config", "G-DVKQKRWPDC");
    </script>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/jpeg" href="/images/andres-profesional.jpg" />
    <link
      rel="shortcut icon"
      type="image/jpeg"
      href="/images/andres-profesional.jpg"
    />
    <link rel="apple-touch-icon" href="/images/andres-profesional.jpg" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://andres-maldonado.com/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content="https://andres-maldonado.com/images/andres-profesional.jpg"
    />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta
      property="og:image:alt"
      content="Andrés Ignacio Maldonado - Tech Lead • AI • Música"
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://andres-maldonado.com/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta
      property="twitter:image"
      content="https://andres-maldonado.com/images/andres-profesional.jpg"
    />
    <meta
      property="twitter:image:alt"
      content="Andrés Ignacio Maldonado - Tech Lead • AI • Música"
    />

    <!-- Additional SEO -->
    <meta name="author" content="Andrés Ignacio Maldonado" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#0D0D0F" />

    <slot name="head" />
    <title>{title}</title>
    {prefetchLinks.map((link) => <link rel="prefetch" href={link.href} />)}
  </head>
  <body class="min-h-full bg-black text-white font-sans">
    <RetroFuturisticMenu />
    <slot />
    <!-- Suscripción -->

    <Footer />
  </body>
</html>
