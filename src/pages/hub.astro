---
import BaseLayout from "../layouts/BaseLayout.astro";
import NeonBox from "../components/atoms/NeonBox.astro";
import Wrapper from "../components/skeleton/Wrapper.astro";
import { Image } from "astro:assets";
import andresProfesional from "../assets/images/andres-cuadrado.jpg";
import NeonLink from "../components/atoms/NeonLink.astro";
---

<BaseLayout
  title="Hub | Andrés Ignacio Maldonado"
  description="Todo lo que necesitas saber sobre mí en un solo lugar"
>
  <Wrapper>
    <div>
      <!-- Linktree-style Layout -->
      <div class="max-w-md mx-auto px-4 py-8">
        <!-- Profile Section -->
        <div class="text-center mb-8">
          <div class="relative inline-block mb-4">
            <div
              class="absolute inset-0 bg-gradient-to-r from-neon-cyan via-neon-pink to-neon-yellow rounded-full blur-xl opacity-30 animate-pulse"
            >
            </div>
            <div
              class="relative rounded-full overflow-hidden border-2 border-neon-cyan h-24 w-24"
            >
              <Image
                src={andresProfesional}
                alt="Andrés Ignacio Maldonado"
                width={192}
                height={192}
                class="w-full h-full object-cover"
              />
            </div>
          </div>
          <h1 class="text-2xl font-bold text-base-light font-mono mb-2">
            ANDRÉS IGNACIO MALDONADO
          </h1>
          <p class="text-neon-cyan font-mono mb-4">
            Tech Lead • AI Consultant • Musician
          </p>
          <p class="text-base-grey text-sm max-w-sm mx-auto">
            Software Engineer, consultor en Gen AI y automación, creador de
            contenido y músico profesional.
          </p>
        </div>

        <div class="grid gap-6">
          <NeonLink href="/blog">
            <h3
              class="text-lg font-bold text-base-light flex items-center justify-center gap-3"
            >
              BLOG & ARTÍCULOS
            </h3>
            <p class="text-base-grey text-sm">AI • Dev • Música • Liderazgo</p>
          </NeonLink>

          <NeonLink
            href="https://tiktok.com/@devandmus"
            target="_blank"
            rel="noopener noreferrer"
          >
            <h3
              class="text-lg font-bold text-base-light font-mono flex items-center justify-center gap-3"
            >
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                <path
                  d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"
                ></path>
              </svg>
              TikTok
            </h3>
          </NeonLink>

          <NeonLink
            href="https://linkedin.com/in/devandmus"
            target="_blank"
            rel="noopener noreferrer"
          >
            <h3
              class="text-lg font-bold text-base-light font-mono flex items-center justify-center gap-3"
            >
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                <path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path>
              </svg>
              LinkedIn
            </h3>
          </NeonLink>

          <!-- <NeonBox class="rounded-lg p-4 w-full text-center">
            <a
              href="https://www.youtube.com/@devandmus"
              target="_blank"
              rel="noopener noreferrer"
              class="block group"
            >
              <h3
                class="text-lg font-bold text-base-light font-mono flex items-center justify-center gap-3"
              >
                <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                  <path
                    d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
                  ></path>
                </svg>
                YouTube
              </h3>
            </a>
          </NeonBox> -->
          <p class="text-base-grey text-center font-mono">@devandmus</p>
        </div>
      </div>
    </div>
  </Wrapper>
</BaseLayout>

<style>
  /* Animación de hover para los botones */
  .group:hover {
    transform: translateY(-2px);
  }
</style>
