---
import { Image } from "astro:assets";
import andresProfesional from "../assets/images/andres-profesional.jpg";
import andresCuadrado from "../assets/images/andres-cuadrado.jpg";
---

<section class="bg-base-dark text-base-light px-6 py-20">
  <h2 class="text-3xl md:text-5xl font-bold mb-10 text-center">Proyectos</h2>

  <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
    <!-- Proyecto 1 -->
    <div
      class="p-6 border border-base-grey/40 rounded-lg hover:border-neon-cyan transition"
    >
      <h3 class="font-mono text-sm text-neon-cyan mb-2">PROJECT_001</h3>
      <Image
        src={andresProfesional}
        alt="Proyecto GenAI"
        width={800}
        height={600}
        class="rounded-md mb-4"
        loading="lazy"
        decoding="async"
      />
      <p class="mb-4">Consultoría en GenAI para transformación digital.</p>
      <a
        href="#"
        data-astro-prefetch
        class="px-4 py-2 rounded-md bg-neon-yellow text-black font-bold hover:scale-105 transition"
        >Ver estudio</a
      >
    </div>

    <!-- Proyecto 2 -->
    <div
      class="p-6 border border-base-grey/40 rounded-lg hover:border-neon-pink transition"
    >
      <h3 class="font-mono text-sm text-neon-pink mb-2">PROJECT_002</h3>
      <Image
        src={andresCuadrado}
        alt="Sistema Fullstack"
        width={800}
        height={600}
        class="rounded-md mb-4"
        loading="lazy"
        decoding="async"
      />
      <p class="mb-4">Desarrollo de un sistema fullstack escalable.</p>
      <a
        href="#"
        data-astro-prefetch
        class="px-4 py-2 rounded-md bg-neon-yellow text-black font-bold hover:scale-105 transition"
        >Ver estudio</a
      >
    </div>
  </div>
</section>
