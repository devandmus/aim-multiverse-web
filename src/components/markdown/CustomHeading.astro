---
export interface Props {
    level: 1 | 2 | 3 | 4 | 5 | 6;
    class?: string;
}

const { level, class: className = "" } = Astro.props;

// Clases específicas para cada nivel de título
const headingClasses = {
    1: "text-4xl md:text-5xl font-bold text-base-light mb-8 mt-12 leading-tight tracking-tight",
    2: "text-3xl md:text-4xl font-semibold text-base-light mb-6 mt-10 leading-tight tracking-tight border-b-2 border-neon-cyan pb-3 relative after:content-[''] after:absolute after:bottom-[-2px] after:left-0 after:w-16 after:h-0.5 after:bg-gradient-to-r after:from-neon-cyan after:to-neon-pink",
    3: "text-2xl md:text-3xl font-semibold text-base-light mb-4 mt-8 leading-tight tracking-tight",
    4: "text-xl md:text-2xl font-semibold text-base-light mb-3 mt-6 leading-tight",
    5: "text-lg md:text-xl font-semibold text-base-light mb-2 mt-4 leading-tight",
    6: "text-base md:text-lg font-semibold text-base-light mb-2 mt-4 leading-tight",
};
---

{
    level === 1 && (
        <h1 class={`${headingClasses[level]} ${className}`}>
            <slot />
        </h1>
    )
}
{
    level === 2 && (
        <h2 class={`${headingClasses[level]} ${className}`}>
            <slot />
        </h2>
    )
}
{
    level === 3 && (
        <h3 class={`${headingClasses[level]} ${className}`}>
            <slot />
        </h3>
    )
}
{
    level === 4 && (
        <h4 class={`${headingClasses[level]} ${className}`}>
            <slot />
        </h4>
    )
}
{
    level === 5 && (
        <h5 class={`${headingClasses[level]} ${className}`}>
            <slot />
        </h5>
    )
}
{
    level === 6 && (
        <h6 class={`${headingClasses[level]} ${className}`}>
            <slot />
        </h6>
    )
}
