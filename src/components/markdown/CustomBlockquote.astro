---
export interface Props {
    class?: string;
}

const { class: className = "" } = Astro.props;
---

<blockquote
    class={`border-l-4 border-neon-cyan bg-gradient-to-r from-cyan-500/5 to-pink-500/2 p-8 rounded-lg my-12 italic text-base-light relative border border-cyan-500/20 shadow-lg ${className}`}
>
    <slot />
</blockquote>

<style>
    blockquote::before {
        content: '"';
        font-size: 4rem;
        color: var(--neon-cyan);
        position: absolute;
        top: -0.5rem;
        left: 1rem;
        opacity: 0.3;
        font-family: serif;
    }

    blockquote::after {
        content: "";
        position: absolute;
        bottom: 0;
        right: 0;
        width: 60px;
        height: 2px;
        background: linear-gradient(90deg, var(--neon-cyan), var(--neon-pink));
    }
</style>
