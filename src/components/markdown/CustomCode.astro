---
export interface Props {
    class?: string;
}

const { class: className = "" } = Astro.props;
---

<code
    class={`bg-black/40 text-neon-pink px-3 py-1.5 rounded-md text-sm font-mono border border-pink-500/30 shadow-md relative ${className}`}
>
    <slot />
</code>

<style>
    code::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
            45deg,
            transparent,
            rgba(255, 0, 160, 0.1),
            transparent
        );
        border-radius: 0.375rem;
        pointer-events: none;
    }
</style>
