---
export interface Props {
    class?: string;
}

const { class: className = "" } = Astro.props;
---

<div class="overflow-x-auto my-12 -mx-10 w-[calc(100%+5rem)]">
    <table
        class={`border-collapse w-full overflow-hidden shadow-lg border border-neon-cyan ${className}`}
    >
        <slot />
    </table>
</div>

<style>
    th {
        border: 1px solid rgba(6, 182, 212, 0.3);
        padding: 1rem;
        text-align: left;
        background: linear-gradient(
            135deg,
            rgba(6, 182, 212, 0.15),
            rgba(236, 72, 153, 0.05)
        );
        color: var(--base-light);
        font-weight: 600;
        font-size: 1.125rem;
    }

    td {
        border: 1px solid rgba(6, 182, 212, 0.3);
        padding: 1rem;
        color: var(--base-light);
        background: rgba(0, 0, 0, 0.2);
    }

    tr:nth-child(even) td {
        background: rgba(6, 182, 212, 0.05);
    }
</style>
