---
export interface Props {
    ordered?: boolean;
    class?: string;
}

const { ordered = false, class: className = "" } = Astro.props;
const Tag = ordered ? "ol" : "ul";
---

<Tag class={`mb-10 mt-6 pl-8 ${className}`}>
    <slot />
</Tag>

<style>
    ul li {
        margin-bottom: 1rem;
        font-size: 1.125rem;
        line-height: 1.75;
        color: var(--base-light);
    }

    ul li::marker {
        color: var(--neon-cyan);
        font-size: 1.25rem;
    }

    ol li {
        margin-bottom: 1rem;
        font-size: 1.125rem;
        line-height: 1.75;
        color: var(--base-light);
    }

    ol li::marker {
        color: var(--neon-pink);
        font-weight: 600;
    }
</style>
