---
export interface Props {
    class?: string;
}

const { class: className = "" } = Astro.props;
---

<pre
    class={`bg-gradient-to-br from-gray-900 to-gray-800 border border-neon-cyan p-8 my-12 overflow-x-auto shadow-2xl relative -mx-10 w-[calc(100%+5rem)] ${className}`}>
    <slot />
</pre>

<style>
    pre::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent,
            var(--neon-cyan),
            var(--neon-pink),
            transparent
        );
        opacity: 0.6;
    }

    pre code {
        background: none;
        border: none;
        padding: 0;
        color: var(--base-light);
        font-size: 0.875rem;
        line-height: 1.6;
    }
</style>
