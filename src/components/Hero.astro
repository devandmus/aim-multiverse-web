---
import NeonLink from "../components/atoms/NeonLink.astro";

import Gradients from "./skeleton/Gradients.astro";
import { Image } from "astro:assets";
import andresBack from "../assets/images/andres-back.png";
---

<section class="relative py-[100px] flex items-center justify-center">
  <Gradients />

  <!-- Hero: Contenido principal -->
  <div
    class="relative z-10 text-center max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-[40%_60%] gap-12"
  >
    <!-- Hero: Foto con efecto de brillo -->
    <div class="relative">
      <Image
        src={andresBack}
        alt="Andrés Ignacio Maldonado"
        width={512}
        height={512}
        class="mx-auto w-48 md:w-64 rounded-lg shadow-2xl border-2 border-purple-500/30"
        loading="eager"
        decoding="async"
      />
      <!-- Hero: Efecto de brillo alrededor de la foto -->
      <div
        class="absolute inset-0 rounded-full bg-gradient-to-r from-purple-500/20 via-pink-500/20 to-cyan-500/20 blur-xl -z-10"
      >
      </div>
    </div>

    <div>
      <!-- Hero: Nombre con gradiente de texto -->
      <h1
        class="text-4xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-white via-purple-200 to-cyan-200 bg-clip-text text-transparent"
      >
        ANDRÉS IGNACIO MALDONADO
      </h1>

      <!-- Hero: Subtítulo con efecto de brillo -->
      <p
        class="text-lg md:text-xl lg:text-2xl text-neon-cyan mb-8 font-mono tracking-wide"
      >
        Tech Lead • AI • Música • Futuro
      </p>

      <!-- Hero: Botón con gradiente y efectos -->
      <div class="flex items-center justify-center">
        <NeonLink href="/hub" label="¡Trabajemos juntos!" />
      </div>
    </div>
  </div>
</section>
