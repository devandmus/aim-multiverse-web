---
const { class: className = "" } = Astro.props;
---

<div class={`relative bg-black ${className}`}>
  <slot />

  <!-- Línea superior -->
  <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-purple-500/50 to-transparent"></div>

  <!-- Línea inferior -->
  <div class="absolute bottom-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-cyan-500/50 to-transparent"></div>

  <!-- Línea izquierda -->
  <div class="absolute top-0 left-0 h-full w-px bg-gradient-to-b from-transparent via-pink-500/50 to-transparent"></div>

  <!-- Línea derecha -->
  <div class="absolute top-0 right-0 h-full w-px bg-gradient-to-b from-transparent via-yellow-500/50 to-transparent"></div>
</div>

<style>
  /* Forzamos que sea un contenedor con posición relativa */
  .relative {
    position: relative;
  }
</style>
